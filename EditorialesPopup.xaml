<Window x:Class="LibreriaDeLibrosSL.EditorialesPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibreriaDeLibrosSL"
        mc:Ignorable="d"
        Title="EditorialesPopup" Height="510" Width="347">
    <Grid>
        <Label Content="Añadir Editorial" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="24" Margin="14,14,0,0"/>
        <Label Content="ID" HorizontalAlignment="Left" Margin="32,80,0,0" VerticalAlignment="Top"/>
        <Label Content="CIF" HorizontalAlignment="Left" Margin="32,110,0,0" VerticalAlignment="Top"/>
        <Label Content="Nombre" HorizontalAlignment="Left" Margin="32,141,0,0" VerticalAlignment="Top"/>
        <Label Content="Teléfono" HorizontalAlignment="Left" Margin="32,170,0,0" VerticalAlignment="Top"/>
        <Label Content="Dirección" HorizontalAlignment="Left" Margin="32,200,0,0" VerticalAlignment="Top"/>
        <Label Content="Provincia" HorizontalAlignment="Left" Margin="32,230,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tb_editorial_popup_id" HorizontalAlignment="Left" Margin="100,80,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="tb_editorial_popup_cif" HorizontalAlignment="Left" Margin="100,110,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="tb_editorial_popup_nombre" HorizontalAlignment="Left" Margin="100,141,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="tb_editorial_popup_telefono" HorizontalAlignment="Left" Margin="100,170,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="tb_editorial_popup_direccion" HorizontalAlignment="Left" Margin="100,200,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Content="Cancelar" HorizontalAlignment="Left" Margin="9,380,0,0" Height="26" VerticalAlignment="Top"/>
        <Button Content="Aceptar" HorizontalAlignment="Left" Margin="292,380,0,0" Height="26" VerticalAlignment="Top"/>
        <Label Content="Municipio" HorizontalAlignment="Left" Margin="32,260,0,0" VerticalAlignment="Top"/>
        <Label Content="Email" HorizontalAlignment="Left" Margin="32,290,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tb_editorial_popup_email" HorizontalAlignment="Left" Margin="100,294,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <ComboBox ItemsSource="{Binding ProvinciaList}" x:Name="cb_editorial_popup_provincia" HorizontalAlignment="Left" Margin="100,227,0,0" VerticalAlignment="Top" Width="156" IsEnabled="False"/>
        <ComboBox ItemsSource="{Binding MunicipioList}" x:Name="cb_editorial_popup_municipio" HorizontalAlignment="Left" Margin="100,260,0,0" VerticalAlignment="Top" Width="156" IsEnabled="False"/>

    </Grid>
</Window>
